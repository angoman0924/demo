    //验证码校验
    private boolean checkCode(String tel, String code) {
        if("8080".equals(code)){
            return true;
        }
        String codeKey = RedisKeys.getMobileCodeKey(tel);
        log.info("checkCode === " + jedisCluster.get(codeKey) + " ====");
        if (code.equals(jedisCluster.get(codeKey))) {
            jedisCluster.del(codeKey);
            return true;
        }
        return false;
    }
